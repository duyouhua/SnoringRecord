<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app1="http://schemas.android.com/tools"
    xmlns:waveview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#Aaffffff">


        <com.shuyu.waveview.AudioWaveView
            android:id="@+id/audioWave"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            waveview:waveColor="@color/colorPrimary"/>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/audioWave"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/record"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="开启"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/recordPause"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="暂停"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/stop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="停止"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="重置"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btn_layout"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <top.jplayer.audio.view.CompassServant
                android:id="@+id/compass_servant"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/white"
                android:padding="0dp"
                app1:cs_color1="@color/white"
                app1:cs_color2="@color/oxygen_green"
                app1:cs_color3="@color/cinnabar_red"
                app1:cs_color4="@color/white"
                app1:cs_color_commander="3"
                app1:cs_decibel="119"
                app1:cs_galaxy_degree="280"
                app1:cs_outer_circle="7dp"
                app1:cs_text_size="30dp"
                app1:cs_tick_mark_length="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llVolume"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/wavePlay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="波形重现"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="设置阀值（当前 60）"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/recordShow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="睡眠记录"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_login_selected"
                android:text="精准投放"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

